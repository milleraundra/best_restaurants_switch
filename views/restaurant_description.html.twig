<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="css/bootstrap-theme.min.css" type="text/css">
    <link rel="stylesheet" href="css/styles.css" type="text/css">

    <script src="js/jquery-1.12.0.js"></script>
    <script src="js/scripts.js"></script>
    <title></title>
  </head>
  <body>
      <div class="container">
          <h1>{{ restaurant.getName }}</h1>
          <p> {{ restaurant.getDescription }}</p>
          <p> {{ restaurant.getWebsite }}</p>
          <p> {{ restaurant.getLocation }}</p>
          <p> {{ restaurant.getPhone }}</p>

<!-- Edit Restaurant -->
            <form action="/restaurants/{{ restaurant.getId }}/edit" method="get">
              <button type="submit">Edit Restaurant</button>
            </form>

<!-- Delete Restaurant -->
          <form action="/restaurants/{{ restaurant.getId }}" method="post">
            <input name="_method" type="hidden" value="delete">
            <button type="submit">Delete Restaurant</button>
          </form>
      </div>
  </body>
</html>
